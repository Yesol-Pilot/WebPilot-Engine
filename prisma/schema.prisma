// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  scenarios Scenario[]
  assets    Asset[]
  skyboxes  Skybox[]
}

model Scenario {
  id            String   @id @default(uuid())
  title         String
  theme         String
  narrative_arc String   // JSON string
  nodes         String   // JSON string
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Skybox {
  id        String   @id @default(uuid())
  prompt    String   @unique
  filePath    String
  depthMapPath String?
  meshPath     String?
  styleId     Int?
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Asset {
  id          String   @id @default(uuid())
  prompt      String   @unique
  filePath    String
  type        String   // 'static_mesh', 'interactive_prop'
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
